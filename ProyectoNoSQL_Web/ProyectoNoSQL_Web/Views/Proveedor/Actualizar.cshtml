@model ProyectoNoSQL_Web.Entidades.Proveedor

@{
    ViewBag.Title = "Actualizar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center" style="margin-top:5%">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12 d-none d-lg-block"></div>
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h3 class="h4 text-gray-900 mb-4">Actualizar Proveedor</h3>
                                </div>
                                @using (Html.BeginForm("Actualizar", "Proveedor", FormMethod.Post))
                                {
                                    <div class="card shadow m-5">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Provedor</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                                    <div class="col-sm-12">
                                                        <div class="col-sm-12">
                                                            @Html.HiddenFor(m => m.Id)
                                                            <div class="form-group">
                                                                @Html.Label("Nombre del Proveedor")
                                                                @Html.TextBoxFor(model => model.NombreProveedor, new { @class = "form-control", @required = "true" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.Label("Dirección del Proveedor")
                                                                @Html.TextBoxFor(model => model.DireccionProveedor, new { @class = "form-control", @required = "true" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.Label("Teléfono del Proveedor")
                                                                @Html.TextBoxFor(model => model.TelefonoProveedor, new { @class = "form-control", @required = "true", @type = "number" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.Label("Correo Electrónico del Proveedor")
                                                                @Html.TextBoxFor(model => model.EmailProveedor, new { @class = "form-control", @required = "true", @type = "email" })
                                                            </div>

                                                            <button type="submit" class="btn btn-primary">Guardar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>