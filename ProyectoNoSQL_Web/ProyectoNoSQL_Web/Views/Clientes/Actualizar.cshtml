@model ProyectoNoSQL_Web.Entidades.Cliente

@{
    ViewBag.Title = "MostrarUno";
}

<div class="container">
    <div class="row justify-content-center" style="margin-top:5%">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-12 d-none d-lg-block"></div>
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h3 class="h4 text-gray-900 mb-4">Actualizar Cliente</h3>
                                </div>


                                @using (Html.BeginForm("Actualizar", "Clientes", FormMethod.Post))
                                {
                                    <div class="card shadow m-5">
                                        <div class="card-header py-3">
                                            <h6 class="m-0 font-weight-bold text-primary">Clientes</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                                    <div class="col-sm-12">
                                                        <div class="col-sm-12">
                                                            @Html.HiddenFor(m => m.Id)
                                                            <div class="form-group">
                                                                <label>Nombre</label>
                                                                @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @required = "true" })
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Apellido</label>
                                                                @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control", @required = "true" })
                                                            </div>
                                                            <div class="form-group">
                                                                <label>FechaNacimiento</label>
                                                                @Html.TextBoxFor(model => model.FechaNacimiento, new { @class = "form-control", @required = "true" })
                                                            </div>
                                                            <div class="form-group">
                                                                @Html.Label("Genero")
                                                                @Html.DropDownListFor(m => m.Genero, new SelectList(new[] { new SelectListItem { Text = "Seleccione....", Value = "null" }, new SelectListItem { Text = "Masculino", Value = "Masculino" }, new SelectListItem { Text = " Femenino", Value = "Femenino" } }, "Value", "Text"), new { @class = "form-control", @required = "true" })
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Direccion</label>
                                                                @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control", @required = "true" })
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Telefono</label>
                                                                @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", @required = "true", @type = "number" })
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Fecha Inicio</label>
                                                                @Html.TextBoxFor(model => model.FechaInicioMembresia, new { @class = "form-control", @required = "true" })
                                                            </div>
                                                            <div class="form-group">
                                                                <label>Email</label>
                                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @required = "true", @type = "email" })
                                                            </div>
                                                            <button type="submit" class="btn btn-primary">Guardar</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
